<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/assets/gamer.png">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Wiki Games</title>
</head>
<body class="bg-dark">
  <!-- navbar -->
  <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
     <div class="container-fluid">
       <a class="navbar-brand" href="/" style="color: white; font-weight: 600; font-size: 30px;">A<span style="color: red;">DW</span></a>
       <form class="d-flex" role="search">
         <a class="btn btn" type="submit" style="margin-right: 10px; color: white; background-color: #931414;" href="/" >Home</a>
         <a class="btn btn" type="submit" style="margin-right: 10px; color: white; background-color: #931414;" href="/logout">Logout</a>
       </form>
     </div>
   </nav>
 <!-- end navbar -->

 <!-- edit card -->
 <div class="login-container">
   {{#if messages.info}}
      <div class="alert alert-success" role="alert">
       <div class="container">
        {{messages.info}}
        </div>
      </div>
    {{/if}}
    <form action="/add-hero" method="POST" enctype="multipart/form-data">
    <h1>Add Card</h1>
    <div class="form-floating" style="margin: 20px 20%;">
      <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="name">
      <label for="floatingInput">Name</label>
    </div>
    <div class="hero-type" style="margin: 0px 20%;">
      <select id="type" name="type_id">
        <option hidden>Select Type</option>
        {{#each types}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="mb-3" style="margin: 0px 20%;">
      <label for="formFile" class="form-label"></label>
      <input class="form-control" type="file" id="formFile" name="photo">
    </div>
    <div class="btn-container">
    <button type="submit" class="btn-register">Submit</button>
    </div>
  </form>
</div>
 <!-- end edit -->
</body>
</html>